<h1><%= @list.name() %></h1>

<% if @list.tasks().any?() %>
<h3>Here are all the tasks in this list:</h3>

<ul>
  <% @list.tasks().each() do |task| %>
  <li><%= task.description() %> </li>
  <% end %>
</ul>

<% else %>
<p>There are no tasks on this list!</p>
<% end %>


<hr>

<div class="container">
  <a href="/">Home</a>
</div>

<div class="container">
  <p> <a href="/lists/<%= @list.id() %>/edit">Edit <%=
        @list.name() %> list
      </a>
  </p>
  <p> <a href="/">Return to Main Page
      </a>
  </p>
</div>
